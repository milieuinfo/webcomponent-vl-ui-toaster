{
  "name": "vl-ui-toaster",
  "version": "1.0.9",
  "description": "De toaster component is een container voor een aantal gestapelde alerts.",
  "main": "index.js",
  "scripts": {
    "prepare": "npm update --dev vl-ui-util && npm run prepare:util",
    "prepare:util": "npm explore vl-ui-util -- npm run util",
    "pretest": "npm install chromedriver --chromedriver-force-download",
    "test": "npm run test:unit && npm run test:e2e",
    "test:unit": "wct --config-file ./wct.local.conf.json",
    "test:e2e": "npm run test:server:start && npm run test:e2e:chrome && npm run test:e2e:firefox",
    "test:e2e:grid": "npm run test:server:start && npm run test:e2e:chrome:grid && npm run test:e2e:firefox:grid",
    "test:grid": "wct --config-file ./wct.docker.conf.json && npm run test:e2e:grid",
    "posttest:e2e": "pkill -f http-server",
    "test:e2e:chrome": "mocha --chrome",
    "test:e2e:chrome:grid": "mocha --chrome --grid",
    "test:e2e:firefox": "mocha --firefox",
    "test:e2e:firefox:grid": "mocha --firefox --grid",
    "test:e2e:opera": "mocha --opera",
    "test:e2e:safari": "mocha --safari",
    "test:server:start": "http-server &",
    "release": "np",
    "release:prepare": "npm run release:prepare:build && npm run release:prepare:imports && npm run release:prepare:css && npm run release:prepare:commit",
    "release:prepare:build": "minify *.src.js > vl-toaster.js",
    "release:prepare:imports": "replace '../dist/toaster.js' '/node_modules/vl-ui-toaster/dist/toaster.js' vl-toaster.js",
    "release:prepare:css": "replace '\\.\\./style.css' '/node_modules/vl-ui-toaster/style.css' vl-toaster.js",
    "release:prepare:commit": "git add -f vl-toaster.js && git commit --amend --no-edit && git pull",
    "release:testless": "np --yolo",
    "demo": "http-server"
  },
  "dependencies": {
    "chromedriver": "^79.0.0",
    "vl-ui-core": "^3.1.0"
  },
  "peerDependencies": {
    "vl-ui-core": "^2.0.0"
  },
  "devDependencies": {
    "@govflanders/vl-ui-alert": "3.9.1",
    "@govflanders/vl-ui-button": "3.9.1",
    "@govflanders/vl-ui-core": "3.9.1",
    "@govflanders/vl-ui-icon": "3.9.1",
    "@govflanders/vl-ui-toaster": "3.9.1",
    "@govflanders/vl-ui-util": "3.9.1",
    "vl-ui-alert": "^1.3.9",
    "vl-ui-button": "^2.0.0",
    "vl-ui-util": "^3.3.0"
  },
  "publishConfig": {
    "registry": "http://artifactory-pr-build.lb.cumuli.be:8081/artifactory/api/npm/acd-npm/"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/milieuinfo/webcomponent-vl-ui-toaster.git"
  },
  "author": "DIDM",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/milieuinfo/webcomponent-vl-ui-toaster/issues"
  },
  "homepage": "https://github.com/milieuinfo/webcomponent-vl-ui-toaster#readme"
}
